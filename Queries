SELECT  MIN (length) AS length_min,
        MAX (length) AS length_max,
        AVG (length) AS length_avg,
        COUNT (length),
        COUNT (*)
FROM film

#Find the min, max, average and count for replacement_cost
SELECT  MIN (replacement_cost) AS replacement_cost_min,
